<%= render partial: 'partials/form_errors', locals: {data: @question}  %>

<div class="form-group">
  <%= f.label :content, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.cktext_area :content %>
  </div>
</div>
<div class="form-group">
  <%= f.label :answer, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :answer, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :published?, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.check_box :published, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</div>
