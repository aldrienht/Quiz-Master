<div class="page-header">
  <h1 class="text-capitalize">Teacher: <%= @teacher.fullname %> Examinations</h1>
  <hr class="colorgraph">
</div>

<div class="table-responsive">
  <%= form_tag student_submit_exam_path do %>
    <%= hidden_field_tag 'teacher', @teacher.id %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Questions :</th>
          <th>Your Answer :</th>
        </tr>
      </thead>

      <tbody>
        <% @examinations.each do |exam| %>
        <tr>
          <td style="width: 60%;"><%= raw(exam.content) %></td>
          <td style="width: 40%;">
            <%= text_field_tag "questions[#{exam.id}]",  nil, class: 'form-control', placeholder: 'enter-answer-here', required: true %>
          </td>
        </tr>
        <% end %>

        <tr>
          <td></td>
          <td>
            <%= submit_tag "Finish and Submit", class: "btn btn-lg btn-primary btn-block" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
